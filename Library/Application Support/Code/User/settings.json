{
    // Editor settings.
    "editor.fontSize": 14,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    "editor.trimAutoWhitespace": true,
    "editor.wordWrap": "off",

    // Files settings.
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.pyc": true
    },

    // Workbench settings.
    "workbench.iconTheme": "file-icons",

    // Python settings.
    "python.autoComplete.extraPaths": [
        "/Users/daniel/google-cloud-sdk/platform/google_appengine/lib",
        "/Users/daniel/google-cloud-sdk/platform/google_appengine/google"
    ],

    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "--ignore=E111,E712"
    ],

    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "chromium"
    ]
}
